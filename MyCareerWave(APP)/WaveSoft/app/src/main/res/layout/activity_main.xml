<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prernapadhee.wavesoft.MainActivity"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/blue_edited">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="85dp"
        app:cardBackgroundColor="@color/c19"
        app:cardCornerRadius="8dp">
    <!-- content goes here -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="FIRST NAME: "
        android:layout_marginTop="40dp"
        android:id="@+id/text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/missing_fname"
        android:layout_alignBaseline="@+id/fname"
        android:layout_marginLeft="95dp"
        android:textColor="@color/colorAccent"
        android:onClick="clear"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fname"
        android:layout_toRightOf="@+id/text"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="LAST NAME: "
        android:layout_below="@+id/text"
        android:layout_marginTop="40dp"
        android:id="@+id/text2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/missing_lname"
        android:layout_alignBaseline="@+id/lname"
        android:layout_marginLeft="95dp"
        android:textColor="@color/colorAccent"
        android:onClick="clear"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lname"
        android:layout_toRightOf="@+id/text2"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/fname"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="EMAIL ADDRESS: "
        android:layout_below="@+id/text2"
        android:layout_marginTop="40dp"
        android:id="@+id/text3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/missing_email"
        android:layout_alignBaseline="@+id/email"
        android:layout_toRightOf="@+id/text3"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorAccent"
        android:onClick="clear"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:singleLine="true"
        android:layout_toRightOf="@+id/text3"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/lname"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailvalid"
        android:layout_below="@+id/lname"
        android:layout_toRightOf="@+id/text3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorAccent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="USERNAME: "
        android:layout_below="@+id/text3"
        android:layout_marginTop="40dp"
        android:id="@+id/text4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/missing_username"
        android:layout_alignBaseline="@+id/username"
        android:layout_marginLeft="95dp"
        android:textColor="@color/colorAccent"
        android:onClick="clear"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_toRightOf="@+id/text4"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/email"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exists"
        android:layout_below="@+id/email"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorAccent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="PASSWORD: "
        android:layout_below="@+id/text4"
        android:layout_marginTop="40dp"
        android:id="@+id/text5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/missing_password"
        android:onClick="clear"
        android:layout_alignBaseline="@+id/password"
        android:layout_marginLeft="95dp"
        android:textColor="@color/colorAccent" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_toRightOf="@+id/text5"
        android:layout_below="@+id/username"
        android:inputType="textPassword"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRM\nPASSWORD: "
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text5"
        android:layout_marginTop="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/missing_confirmpassword"
        android:onClick="clear"
        android:layout_alignBaseline="@+id/retype"
        android:layout_marginLeft="95dp"
        android:textColor="@color/colorAccent"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/retype"
        android:layout_below="@+id/password"
        android:inputType="textPassword"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unmatch"
        android:layout_below="@+id/password"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorAccent" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:layout_below="@+id/retype"
        android:id="@+id/register"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:onClick="function"
        android:background="@drawable/mainbutton"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>